{% for nodeShape in nodeShapes -%}
    targetClass: {{ nodeShape.targetClass }}
    {% assign mergedProperties = nodeShape.property | mergePropertiesByPath -%}
    numOfProperties: {{ mergedProperties.size -}}

    {%- for property in mergedProperties %}
        path: {{ property.path }}
        minCount: {{ property.minCount }}
        severity: {{ property.severity }}
        description: {{ property.description | lang: "en" }}
        {%- if property.datatype %}
        datatype: {{ property.datatype }}
        {%- elsif property.or %}
        datatype: {{ property.or | map: "datatype" | join: ", " }}
        {%- endif %}
    {% endfor %}
{% endfor %}
